{
  "name": "payment-api",
  "version": "1.0.0",
  "description": "REST API for payment services using hexagonal architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "mock_server": "mocks-server"
  },
  "keywords": [
    "payment",
    "api",
    "fastify",
    "typescript",
    "hexagonal"
  ],
    "repository": {
    "type": "git",
    "url": "git+https://github.com/tcelestino/code-challenge-payment_api.git"
  },
  "author": "Tiago Celestino",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "10.2.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "ioredis": "^5.6.0",
    "mysql2": "^3.13.0",
    "pino-pretty": "13.0.0",
    "sequelize": "^6.37.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@mocks-server/main": "^4.1.0",
    "@testcontainers/mysql": "10.21.0",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-v8": "3.0.9",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1 ",
    "eslint-plugin-prettier": "^5.2.3",
    "nock": "^14.0.1",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "testcontainers": "10.21.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
